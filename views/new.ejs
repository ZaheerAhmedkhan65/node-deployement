<%- include('partials/_header') %>
<div class="row justify-content-center">
    <div class="col-lg-6">
        <h3 class="mt-2">New Post</h3>
        <div class="card">
            <form action="/posts/create" method="POST" class="card-body">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" id="title" placeholder="Title" class="form-control" required>
                <label for="content" class="form-label">Content</label>
                <input type="text" name="content" id="content" placeholder="Content" class="form-control" required>
                <label for="published_at" class="form-label">Publish Date</label>
                <input type="date" name="published_at" id="published_at" class="form-control">
                <button type="submit" class="btn btn-sm mt-2" style="background-color: black; color: white;">Create</button>
            </form>
        </div>
    </div>
</div>
  
<%- include('partials/_footer') %>