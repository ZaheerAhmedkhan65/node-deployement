<%- include('partials/_header') %>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h3 class="mt-2">Edit Post</h3>
            <div class="card">
                <form action="/posts/<%= post.id %>/update" method="POST" class="card-body">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" placeholder="Title" value="<%= post.title %>" class="form-control" required>
                    <label for="content" class="form-label">Content</label>
                    <input type="text" name="content" id="content" placeholder="Content" value="<%= post.content %>" class="form-control" required>
                    <label for="published_at" class="form-label">Publish Date</label>
                    <input type="date" name="published_at" id="published_at" value="<%= post.published_at %>" class="form-control">
                    <button type="submit" class="btn btn-sm mt-2" style="background-color: black; color: white;">Update</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/userSession.js"></script>
    <%- include('partials/_footer') %>